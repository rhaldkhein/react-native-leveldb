{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "jest/globals": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest",
        "detox"
    ],
    "rules": {
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error"
    },
    "globals": {
        "it": true,
        "expect": true,
        "element": true,
        "describe": true,
        "xdescribe": true,
        "by": true,
        "device": true,
        "beforeAll": true,
        "beforeEach": true,
        "afterAll": true,
        "jest": true,
        "jasmine": true
    }
}